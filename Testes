-- Load Wand UI
local Library = loadstring(game:HttpGet(
    "https://raw.githubusercontent.com/tlredz/Library/refs/heads/main/redz-V5-remake/main.luau"
))()

-- Criando janela
local Window = Library:MakeWindow({
    Title = "Nice Hub : Cool Game",
    SubTitle = "dev by real_redz",
    ScriptFolder = "redz-library-V5"
})

-- Serviços
local Players = game:GetService("Players")
local RunService = game:GetService("RunService")

-- Player Local
local LocalPlayer = Players.LocalPlayer
local Character = LocalPlayer.Character or LocalPlayer.CharacterAdded:Wait()
local Humanoid = Character:WaitForChild("Humanoid")

-- Tab principal
local Tab = Window:MakeTab({
    Title = "Cool Tab",
    Icon = "Home"
})

-- Toggle para velocidade infinita
local InfiniteSpeed = false

Tab:AddToggle({
    Name = "Velocidade Infinita",
    Default = false,
    Callback = function(Value)
        InfiniteSpeed = Value
        if not Value then
            -- Resetar humanoid quando desligar
            Humanoid.WalkSpeed = 16
            Humanoid.JumpPower = 50
        end
    end
})

-- Botão para ativar WalkSpeed/JumpPower manualmente
Tab:AddButton({
    Name = "Aumentar Velocidade e Pulo",
    Debounce = 0.5,
    Callback = function()
        Humanoid.WalkSpeed = 100
        Humanoid.JumpPower = 100
    end
})

-- Botão para resetar
Tab:AddButton({
    Name = "Resetar Velocidade e Pulo",
    Debounce = 0.5,
    Callback = function()
        Humanoid.WalkSpeed = 16
        Humanoid.JumpPower = 50
    end
})

-- Loop seguro para velocidade infinita
RunService.RenderStepped:Connect(function()
    if InfiniteSpeed then
        if Humanoid then
            Humanoid.WalkSpeed = 100
            Humanoid.JumpPower = 100
        end
    end
end)
