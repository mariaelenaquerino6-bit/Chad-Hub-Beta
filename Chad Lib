local j = game:GetService("TweenService")
local i = game:GetService("UserInputService")
local m = game:GetService("Players")
local o = m.LocalPlayer
local q = (gethui or function() return game:GetService("CoreGui") end)()

local Library = {}

function Library:MakeWindow(config)
    local Window = {
        Title = config.Title or "Wand UI",
        Tabs = {}
    }

    -- Instância Principal
    local ScreenGui = Instance.new("ScreenGui", q)
    ScreenGui.Name = "WandUILite"
    ScreenGui.ResetOnSpawn = false

    -- Container Principal
    local Main = Instance.new("Frame", ScreenGui)
    Main.Name = "Main"
    Main.Size = UDim2.new(0, 450, 0, 300)
    Main.Position = UDim2.new(0.5, -225, 0.5, -150)
    Main.BackgroundColor3 = Color3.fromRGB(20, 20, 25)
    Main.BorderSizePixel = 0
    Main.ClipsDescendants = true
    
    local Corner = Instance.new("UICorner", Main)
    Corner.CornerRadius = Radius or UDim.new(0, 8)

    -- [[ SUPORTE A IMAGEM DE FUNDO ]]
    local BackgroundImage = Instance.new("ImageLabel", Main)
    BackgroundImage.Name = "BGImage"
    BackgroundImage.Size = UDim2.new(1, 0, 1, 0)
    BackgroundImage.BackgroundTransparency = 1
    BackgroundImage.Image = "" -- Inicialmente vazio
    BackgroundImage.ImageTransparency = 0.5 -- Transparência padrão
    BackgroundImage.ScaleType = Enum.ScaleType.Crop
    BackgroundImage.ZIndex = 0

    -- [[ FUNÇÕES DE CUSTOMIZAÇÃO ]]
    function Window:SetBackground(id)
        BackgroundImage.Image = "rbxassetid://" .. tostring(id):gsub("rbxassetid://", "")
    end

    function Window:SetTransparency(val)
        Main.BackgroundTransparency = val
        BackgroundImage.ImageTransparency = val
    end

    -- Barra Superior
    local TopBar = Instance.new("Frame", Main)
    TopBar.Name = "TopBar"
    TopBar.Size = UDim2.new(1, 0, 0, 35)
    TopBar.BackgroundColor3 = Color3.fromRGB(30, 30, 35)
    TopBar.BorderSizePixel = 0

    local Title = Instance.new("TextLabel", TopBar)
    Title.Size = UDim2.new(1, -10, 1, 0)
    Title.Position = UDim2.new(0, 10, 0, 0)
    Title.Text = Window.Title
    Title.TextColor3 = Color3.fromRGB(255, 255, 255)
    Title.BackgroundTransparency = 1
    Title.TextXAlignment = Enum.TextXAlignment.Left
    Title.Font = Enum.Font.GothamBold
    Title.TextSize = 14

    -- Menu Lateral (Tabs)
    local TabBar = Instance.new("ScrollingFrame", Main)
    TabBar.Name = "TabBar"
    TabBar.Size = UDim2.new(0, 130, 1, -35)
    TabBar.Position = UDim2.new(0, 0, 0, 35)
    TabBar.BackgroundColor3 = Color3.fromRGB(25, 25, 30)
    TabBar.BorderSizePixel = 0
    TabBar.ScrollBarThickness = 0
    
    local TabList = Instance.new("UIListLayout", TabBar)
    TabList.Padding = UDim.new(0, 5)

    -- Container de Conteúdo
    local Container = Instance.new("Frame", Main)
    Container.Name = "Container"
    Container.Size = UDim2.new(1, -140, 1, -45)
    Container.Position = UDim2.new(0, 135, 0, 40)
    Container.BackgroundTransparency = 1

    -- Draggable (Otimizado)
    local dragging, dragInput, dragStart, startPos
    TopBar.InputBegan:Connect(function(input)
        if input.UserInputType == Enum.UserInputType.MouseButton1 then
            dragging = true
            dragStart = input.Position
            startPos = Main.Position
        end
    end)
    i.InputChanged:Connect(function(input)
        if dragging and input.UserInputType == Enum.UserInputType.MouseMovement then
            local delta = input.Position - dragStart
            Main.Position = UDim2.new(startPos.X.Scale, startPos.X.Offset + delta.X, startPos.Y.Scale, startPos.Y.Offset + delta.Y)
        end
    end)
    i.InputEnded:Connect(function(input)
        if input.UserInputType == Enum.UserInputType.MouseButton1 then dragging = false end
    end)

    function Window:MakeTab(tConfig)
        local Tab = { Active = false }
        local TabBtn = Instance.new("TextButton", TabBar)
        TabBtn.Size = UDim2.new(1, -10, 0, 30)
        TabBtn.BackgroundColor3 = Color3.fromRGB(35, 35, 40)
        TabBtn.Text = tConfig.Title
        TabBtn.TextColor3 = Color3.fromRGB(200, 200, 200)
        TabBtn.Font = Enum.Font.Gotham
        TabBtn.TextSize = 12
        Instance.new("UICorner", TabBtn)

        local TabContent = Instance.new("ScrollingFrame", Container)
        TabContent.Size = UDim2.new(1, 0, 1, 0)
        TabContent.BackgroundTransparency = 1
        TabContent.Visible = false
        TabContent.ScrollBarThickness = 2
        TabContent.CanvasSize = UDim2.new(0, 0, 0, 0)
        
        local ContentList = Instance.new("UIListLayout", TabContent)
        ContentList.Padding = UDim.new(0, 8)
        ContentList.HorizontalAlignment = Enum.HorizontalAlignment.Center
        
        ContentList:GetPropertyChangedSignal("AbsoluteContentSize"):Connect(function()
            TabContent.CanvasSize = UDim2.new(0, 0, 0, ContentList.AbsoluteContentSize.Y + 10)
        end)

        TabBtn.MouseButton1Click:Connect(function()
            for _, v in pairs(Container:GetChildren()) do v.Visible = false end
            for _, v in pairs(TabBar:GetChildren()) do 
                if v:IsA("TextButton") then j:Create(v, TweenInfo.new(0.3), {BackgroundColor3 = Color3.fromRGB(35, 35, 40)}):Play() end
            end
            TabContent.Visible = true
            j:Create(TabBtn, TweenInfo.new(0.3), {BackgroundColor3 = Color3.fromRGB(100, 0, 200)}):Play()
        end)

        function Tab:AddButton(bConfig)
            local Btn = Instance.new("TextButton", TabContent)
            Btn.Size = UDim2.new(0.95, 0, 0, 35)
            Btn.BackgroundColor3 = Color3.fromRGB(40, 40, 45)
            Btn.Text = bConfig.Name
            Btn.TextColor3 = Color3.fromRGB(255, 255, 255)
            Btn.Font = Enum.Font.Gotham
            Btn.TextSize = 13
            Instance.new("UICorner", Btn)
            
            Btn.MouseButton1Click:Connect(bConfig.Callback)
        end

        function Tab:AddDropdown(dConfig)
            local Drop = Instance.new("Frame", TabContent)
            Drop.Size = UDim2.new(0.95, 0, 0, 35)
            Drop.BackgroundColor3 = Color3.fromRGB(40, 40, 45)
            Instance.new("UICorner", Drop)
            
            local DLabel = Instance.new("TextButton", Drop)
            DLabel.Size = UDim2.new(1, 0, 1, 0)
            DLabel.BackgroundTransparency = 1
            DLabel.Text = dConfig.Name .. " : " .. (dConfig.Default or "...")
            DLabel.TextColor3 = Color3.fromRGB(200, 200, 200)
            DLabel.Font = Enum.Font.Gotham
            DLabel.TextSize = 12

            local Open = false
            DLabel.MouseButton1Click:Connect(function()
                Open = not Open
                -- Lógica simplificada de Dropdown
                local Options = dConfig.Options or {}
                local choice = Options[1] or "Nenhum" -- Exemplo simples
                dConfig.Callback(choice)
                DLabel.Text = dConfig.Name .. " : " .. choice
            end)
            
            function Drop:NewOptions(newOptions)
                dConfig.Options = newOptions
            end
            return Drop
        end

        function Tab:AddSection(name)
            local Sec = Instance.new("TextLabel", TabContent)
            Sec.Size = UDim2.new(0.95, 0, 0, 20)
            Sec.BackgroundTransparency = 1
            Sec.Text = "--- " .. name:upper() .. " ---"
            Sec.TextColor3 = Color3.fromRGB(150, 150, 150)
            Sec.Font = Enum.Font.GothamBold
            Sec.TextSize = 10
        end

        return Tab
    end

    function Window:Notify(nConfig)
        print("Notification: " .. nConfig.Title .. " - " .. nConfig.Content)
    end

    return Window
end

return Library
